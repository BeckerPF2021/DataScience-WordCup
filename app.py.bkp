    titles.columns = ['Country','Titles']
    fig = px.pie(titles, values='Titles', names='Country',
                 title='Distribui√ß√£o de T√≠tulos por Pa√≠s', hole=0.4)
    fig.update_layout(transition_duration=500)
    save_figure(fig,'titles_pie.png')
